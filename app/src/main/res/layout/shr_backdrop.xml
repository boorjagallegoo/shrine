<?xml version="1.0" encoding="utf-8"?>
<!-- Java 104: 3. Add the backdrop menu
    Layout que representa un conjunto de botones utilizando MaterialButton de Material Design. -->

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Botón de Material Design para la etiqueta de productos destacados. -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shr_featured_label" />

    <!-- Botón de Material Design para la etiqueta de apartamentos. -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shr_apartment_label" />

    <!-- Botón de Material Design para la etiqueta de accesorios. -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shr_accessories_label" />

    <!-- Botón de Material Design para la etiqueta de calzado. -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shr_shoes_label" />

    <!-- Botón de Material Design para la etiqueta de tops. -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shr_tops_label" />

    <!-- Botón de Material Design para la etiqueta de fondos/bottoms. -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shr_bottoms_label" />

    <!-- Botón de Material Design para la etiqueta de vestidos. -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shr_dresses_label" />

    <!-- Vista de línea para separar las categorías de productos. -->
    <View
        android:layout_width="56dp"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:background="?android:attr/textColorPrimary" />

    <!-- Botón de Material Design para la etiqueta de cuenta de usuario. -->
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Shrine.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shr_account_label" />

</merge>