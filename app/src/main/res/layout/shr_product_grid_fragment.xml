<?xml version="1.0" encoding="utf-8"?>
<!--
    FrameLayout que representa la vista principal de ProductGridFragment.
    Contiene un LinearLayout con un AppBar, un Backdrop y un NestedScrollView
    con un RecyclerView para mostrar la cuadrícula de productos.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.codelabs.mdc.java.shrine.ProductGridFragment">

    <!--
        LinearLayout que organiza los elementos de la vista.
        Contiene un Backdrop que ocupa la pantalla completa y está centrado verticalmente.
    -->
    <LinearLayout
        style="@style/Widget.Shrine.Backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="88dp">

        <!--
            Incluye el diseño del backdrop definido en shr_backdrop.xml.
        -->
        <include layout="@layout/shr_backdrop" />
    </LinearLayout>

    <!--
        AppBarLayout que contiene la barra de herramientas (Toolbar) con el menú y el título de la aplicación.
    -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <!--
            Toolbar que muestra el título de la aplicación, el icono de menú y el fondo personalizado.
        -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/app_bar"
            style="@style/Widget.Shrine.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="12dp"
            android:paddingRight="12dp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/shr_branded_menu"
            app:title="@string/shr_app_name" />
    </com.google.android.material.appbar.AppBarLayout>

    <!--
        NestedScrollView que permite el desplazamiento de la cuadrícula de productos.
    -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/product_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:background="@color/productGridBackgroundColor"
        android:elevation="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--
            RecyclerView que muestra la cuadrícula de productos.
        -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
